<h1>Edit Person Detail</h1>
<%= form_for @persondetail do |f|%>
	<%if @persondetail.errors.any? %>
		<h4>These erros prvented the form from being saved.</h4>
		<ul style="color:red">
			<% @persondetail.errors.full_messages.each do |msg| %>
				<li><%=msg %></li>
			<%end%>
		</ul>
	<%end%>  

	<h4><%="Name : "%><%=f.text_field :name %><br />
	<%="Sex : "%><%=f.text_field :sex %><br />
	<%="Date Of Birth : "%><%=f.date_field :date_of_birth %><br />
	<%="Address : "%><%=f.text_field :address %><br />
	<%="Contact Number : "%><%=f.text_field :contact_number %><br />
	<%="Country : "%><%=f.text_field :country %><br /></h4>
	<%=f.file_field :profilepic ,html: {multipart: true}%>
	<%=f.submit%>
<%end%>
