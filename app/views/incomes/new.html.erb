<h1>Add Income Detail</h1>
<%= form_for @income do |f|%> 
	<%if @income.errors.any? %>
		<h4>These erros prevented the form from being saved.</h4>
		<ul style="color:red">
			<% @income.errors.full_messages.each do |msg| %>
				<li><%=msg %></li>
			<%end%>
		</ul>
	<%end%>  
  
    <%=f.hidden_field :person_detail_id, :value => PersonDetail.find_by(user_id: current_user.id).id%>
	<%="Type  : "%><%= f.collection_select :type_id, Type.all,:id,:name%><br />
	<%="Recieved in  : "%><%= f.select :recieved_in,options_for_select([['CASH','CASH'],['CHEQUE','CHEQUE'],['CREDIT CARD','CREDIT CARD'],['DEBIT CARD','DEBIT CARD']])%><br />
	<%="Amount : "%><%=f.text_field :amount %><br />
	<%="Date : "%><%=f.date_field :date %><br />
	<%=f.submit%>
<%end%>